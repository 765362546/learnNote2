<% include common/header.ejs%>
<h2><%=title%></h2>
<form method="post">
    <input type="text" id="username" name="username"><br>
    <input type="text" id="password" name="password"><br>
    <input type="submit" onclick="postData();return false" value="登录"><br>
</form>
<script>
    function postData() {
        $.post('/login',{
            username:$('#username').val(),
            password:$('#password').val()
        },function (data) {
            if(data.status){
                //登录成功
                window.location.href='/';
            }else{
                alert(data.msg);
            }
        })
    }
</script>

